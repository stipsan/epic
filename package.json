{
  "private": true,
  "scripts": {
    "precommit": "lint-staged",
    "dev": "concurrently \"tsc --watch\" \"node server\"",
    "heroku-postbuild": "next build",
    "start": "node ./node_modules/@epic/server"
  },
  "devDependencies": {
    "@types/node": "^8.0.34",
    "concurrently": "^3.5.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.2.3",
    "prettier": "^1.7.4",
    "prettier-package-json": "^1.4.0",
    "tslint": "^5.7.0",
    "typescript": "^2.5.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.graphql": [
      "prettier --write",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ],
    "package.json": [
      "prettier-package-json --write",
      "git add"
    ]
  },
  "workspaces": [
    "packages/*"
  ]
}
